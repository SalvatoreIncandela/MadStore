<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>war-dist</id>
    <formats>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>
    <baseDirectory>madstore-war-dist-${project.version}</baseDirectory>
    <fileSets>
        <fileSet>
            <includes>
                <include>gridgain/*</include>
                <include>conf/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>madstore-app/target</directory>
            <outputDirectory>war</outputDirectory>
            <includes>
                <include>*.war</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>madstore-gridnode/target</directory>
            <outputDirectory>war</outputDirectory>
            <includes>
                <include>*.war</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>